<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .event{
            width:75%;
        }
        @media (max-width:768px) {
            .event{
                width:100%;
            }
        }
    </style>
    <title>View Info</title>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Think Digital</h3>
            </div>
    
            <ul class="list-unstyled components">
                <li>
                    <a href="/admin/dashboard">Dashboard</a>
                </li>
                <li>
                    <a href="/admin/viewEvents">View Events</a>
                </li>
                <li>
                    <a href="/admin/viewProjects">View Projects</a>
                </li>
                <li>
                    <a href="/admin/viewUsers">View Users</a>
                </li>
                <li>
                    <a href="/admin/viewMembers">View Members</a>
                </li>

            </ul>
    
        </nav>
        <!-- Page Content -->
        <div id="content">
    
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
    
                    <button type="button" id="sidebarCollapse" class="btn btn-colour">
                        <i class="fa fa-align-left"></i>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-align-justify"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Welcome <%= user.name %></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/logout"><i class="fa fa-sign-out"></i>Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            
            <h3 class="mt-5">Recruitment Events</h3>
            <div class="line"></div>
            <div class="mt-3">
                <span>Filters:</span>
                <button class="filter btn btn-link" value="web">Web</button>
                <button class="filter btn btn-link" value="app">App</button>
                <button class="filter btn btn-link" value="iot">IOT</button>
                <button class="filter btn btn-link" value="game">Game</button>
                <button class="filter btn btn-link" value="gd">GD</button>
                <button class="filter btn btn-link" value="hr">HR</button>
                <button class="filter btn btn-link" value="all">Show all</button>
            </div>
            <% for(let i = data.length-1; i>=0; i--){ %>
               <ul class="event list-group mt-4">
                   <li class="list-group-item"><span class="text-color">Title</span>: <%= data[i].title %></li>
                   <li class="domain list-group-item"><span class="text-color">Domain</span>: <%= data[i].domain %></li>
                   <li class="list-group-item"><span class="text-color">Date</span>: <%= data[i].date %></li>
                   <li class="list-group-item"><span class="text-color">Time</span>: From <%= data[i].startTime %> To <%= data[i].endTime %></li>
                   <li class="list-group-item"><span class="text-color">Venue</span>: <%= data[i].venue %></li>
                   <li class="list-group-item"><span class="text-color">Description</span>: <%= data[i].description %></li>
                   <li class="list-group-item"><span class="text-color">Added by</span>: <%= data[i].addedBy %></li>
                   <li class="list-group-item"><span class="text-color">Added on</span>: <%= data[i].addedOn %></li>
                   <% if (data[i].editedBy) { %>
                    <li class="list-group-item"><span class="text-color">Edited by</span>: <%= data[i].editedBy %></li>
                   <% } %>
                   <% if (data[i].editedOn) { %>
                    <li class="list-group-item"><span class="text-color">Edited on</span>: <%= data[i].editedOn %></li>
                   <% } %>
                   <li class="list-group-item">
                       <button class="deleteEvent btn btn-sm btn-colour" data-id="<%= data[i]._id %>">Delete</button>
                       <button type="submit" class="editEvent btn btn-sm btn-colour" data-id="<%= data[i]._id %>">Edit</button>
                   </li>
                    <% if (data[i].feedback) { %>
                     <li class="list-group-item">
                        <a class="btn btn-link" href="/admin/viewFeedback/<%= data[i]._id %>">View Feedback</a>
                     </li>
                    <% } %>
                    <% if (data[i].attendance) { %>
                     <li class="list-group-item">
                        <a class="btn btn-link" href="/admin/viewAttendance/<%= data[i]._id %>">View Attendance</a>
                     </li>
                    <% } %>
               </ul>
            <% } %>
            
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
    <script>

        $(document).ready(function () {

            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

        });
        //filter
        var buttons = document.querySelectorAll('.filter')

        buttons.forEach(button => {
            button.addEventListener('click',filterItems)
        })

        function filterItems(e) {
            var c = e.target.value
            var items = document.querySelectorAll('.domain')
            items.forEach(item => {
                if(c=='all') item.parentNode.style.display = 'block'
                else if(item.innerHTML !== '<span class="text-color">Domain</span>: '+c) item.parentNode.style.display='none'
                else item.parentNode.style.display='block'
            })
        }

        //delete
        document.querySelectorAll('.deleteEvent').forEach(btn => btn.addEventListener('click',deleteEvent))
        
        async function deleteEvent(e) {
            e.preventDefault()
            let id = e.target.dataset.id
            
            let response = await fetch(`/admin/delete?from=events`,{
                    method: 'POST',
                headers:{'content-type':'application/json'},
                body:JSON.stringify({id})
            })

            let data = await response.json()

            if(response.status === 200){
                e.target.parentNode.innerHTML = `<p style="color:red">Event deleted</p>`
                console.log(data.msg)
            }
            else{
                    e.target.parentNode.innerHTML = `<p style="color:red">Some error occured, please reload the page and try again</p>`
                }
            }
            
            //edit
            document.querySelectorAll('.editEvent').forEach(btn => btn.addEventListener('click',editEvent))

            function editEvent(e){
                e.preventDefault()
                window.location = `/admin/editEvent?id=${e.target.dataset.id}`
            }
    </script>
</body>
</html>