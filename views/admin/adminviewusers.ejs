<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        table{
            width: 100%;
        }
        th,td {
            height:2rem;
        }
        td{
            padding-left: 15px;
        }
    </style>
</head>
<body>
    <h2>Welcome <%= user.name %></h2>
    <a href="/admin/logout">Logout</a>
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/changePassword">Change Password</a>
    <a href="/admin/viewEvents">View Events</a>
    <a href="/admin/viewUsers">View Users</a>
    <a href="/admin/viewMembers">View Members</a>
    <a href="/admin/addTask">Add Task</a>
    <hr>

    <h1>Users</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Primary Domain</th>
            <th>Secondary Domain</th>
            <th>Year</th>
            <th>Department</th>
        </tr>
        <% for(let user of data){ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.domain1 %></td>
                <td><%= user.domain2 %></td>
                <td><%= user.year %></td>
                <td><%= user.dept %></td>
                <td>
                    <input type="hidden" class="id" value="<%= user._id %>">
                    <select class="domain-list">
                        <option value="" disabled selected>Select a domain to promote</option>
                        <option value="<%= user.domain1 %>"><%= user.domain1 %></option>
                        <option value="<%= user.domain2 %>"><%= user.domain2 %></option>
                    </select>
                    <button class="promoteBtn">Promote to member</button>
                    <button class="deleteBtn">Delete user</button>
                    <a href="/admin/viewprofile/<%= user._id %>">View More</a>
                </td>
            </tr>
         <% } %>
    </table>

    <script>
        var deleteBtns = document.querySelectorAll('.deleteBtn')
        var promoteBtns = document.querySelectorAll('.promoteBtn')

        deleteBtns.forEach(btn => {
            btn.addEventListener('click', deleteUser)
        })

        promoteBtns.forEach(btn => {
            btn.addEventListener('click', promoteUser)
        })

        async function deleteUser(e) {
            let id = e.target.offsetParent.firstElementChild.value

            let response = await fetch(`/admin/delete?from=users`,{
                method: 'POST',
                headers:{'content-type':'application/json'},
                body:JSON.stringify({id})
            })

            let data = await response.json()

            if(response.status === 200){
                e.target.offsetParent.innerHTML = `User deleted`
            }
            console.log(data)
        }
        
        async function promoteUser(e) {
            let id = e.target.offsetParent.firstElementChild.value

            let selectedDomain = e.target.offsetParent.childNodes[3].value
            if(!selectedDomain) return alert('please choose a domain to promote to')

            let response = await fetch(`/admin/promote`,{
                method: 'POST',
                headers: {
                    'content-type': 'application/json'
                },
                body:JSON.stringify({id,domain:selectedDomain})
            })
    
            let data = await response.json()
    
            if(response.status === 200){
                e.target.offsetParent.innerHTML = `User promoted`
            }
            console.log(data)
        }

    </script>
</body>
</html>