<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .step{
            height: 50px;
            width: 50px;
            line-height: 46px;
            text-align: center;
            border-radius: 50%;
            position: relative;
            color: white;
        }
        .timeline{
          width: 80%;
          margin: 0 auto;
        }
        .event-card{
          width: 80%!important;
          margin: 5%!important;
        }
        @media (max-width: 600px)
        {
          .timeline{
            width: 100%;
            margin: 0 auto;
          }
        }
        .line{
          position: absolute;
            top: 25px;
            left: 25px;
            height: 150px;
            z-index: -1;
        }
        .step img{
            height: 20px;
            width: 20px;
            z-index: 1;
        }
        .red{
          border: 2px solid grey;
          color: white;
          background-color: grey;
        }
        .yellow{
            border: 2px solid #02c39a;
            color: #02c39a;
            background-color: white;
        }
        .green{
            border: 2px solid #02c39a;
            background-color: #02c39a;
        }
        .green-line{
          border-left: 2px solid #02c39a;
        }
        .grey-line{
          border-left: 2px dashed grey;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">TD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link dynamic-link" href="/user/profile">Profile<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link dynamic-link" href="/user/primarydash">Primary Domain</a>
            </li>
            <li class="nav-item">
              <a class="nav-link dynamic-link" href="/user/secondarydash">Secondary Domain</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://think-digital.in/">Our Website</a>
            </li>
            <li class="nav-item">
              <button class="nav-link" id="logout-btn" style="cursor: pointer;">Logout</button>
            </li>
          </ul>
        </div>
    </nav>
    <div class="container">
      <h2>Your recruitment timeline :</h2>
        <% let c=1 %>
        <div class="timeline">
        <% for(let i=0; i<result.length; i++) { %>

                <!-- <% let endDate = new Date(result[i].endDate) %>
                <% let startDate = new Date(result[i].startDate) %>
                <% if(today < startDate) { %> -->
                <div class="step red float-left">
                  <%= c++ %>
                  <div class="line grey-line"></div>
                </div> 
                <!-- <% } else if (today >= startDate && today <= endDate){ %> -->
                <div class="step yellow float-left"><%= c++ %> <div class="line grey-line"></div></div> 
                <!-- <% } else { %>  -->
                <div class="step green float-left"><%= c++ %> <div class="line green-line"></div></div> 
                <!-- <% } %> -->
                <div class="card event-card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title<%= c %>"><%= result[i].title %></h5>
                      <h6 class="card-subtitle mb-2 text-muted">Date:  <%= result[i].date %></h6>
                    <p>
                        <a data-toggle="collapse" href="#multiCollapseExample1<%= c %>" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">View More</a>
                        <button type="button" data-toggle="collapse" data-target="#multiCollapseExample2<%= c %>" aria-expanded="false" aria-controls="multiCollapseExample2">Leave Feedback</button>
                    </p>
                    <div class="row">
                        <div class="col">
                          <div class="collapse multi-collapse" id="multiCollapseExample1<%= c %>">
                            <p><%= result[i].description %> </p>
                            <p>Venue:  <%= result[i].venue %> </p>
                            <p>Time:  <%= result[i].startTime %> -  <%= result[i].endTime %></p>
                            <p>Will you be attending?</p>
                            <div id="<%=result[i]._id%>" >
                              <form class="attendance">
                                  <input  type="radio" id="yes" name="attendance" value="yes">
                                  <label for="yes">yes</label><br>
                                  <input  type="radio" id="no" name="attendance" value="no">
                                  <label for="no">no</label><br>
                                  <button type="submit">Submit</button>
                              </form>
                            </div>
                          </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="collapse multi-collapse" id="multiCollapseExample2<%= c %>">
                              <div id="<%=result[i]._id%>" >
                                <form class="feedback">
                                    <input id="env" type="range" min="1" max="5" value="5" name="env">
                                    <label for="env">Environment</label><br>
                                    
                                    <input id="speaker" type="range" min="1" max="5" value="5" name="speaker">
                                    <label for="speaker">Speakers</label><br>
                                    
                                    <input id="understanding" type="range" min="1" max="5" value="5" name="understanding">
                                    <label for="understanding">Understanding</label><br>
                                    <input type="text" placeholder="Any Suggestions" name="suggestion"><br>
                                    <button type="submit">Submit</button>
                                </form>
                              </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
        <% } %>
      </div>
    </div>
    <script>
      //adding the token to all links
      let token = localStorage.getItem('token')
      document.querySelectorAll('.dynamic-link').forEach(link => link.href+=`/${token}`)

      //logout functionality
      document.querySelector('#logout-btn').addEventListener('click',() => {
        localStorage.removeItem('token')
        window.location = '/user/login'
      })

      let atns = document.querySelectorAll('.attendance')

      atns.forEach(atn => {
        atn.addEventListener('submit', markAtn)
      })
      
      async function markAtn(e) {
        e.preventDefault()

        let id = e.target.parentNode.id

        let value = e.target.childNodes
        let attendance

        if(value[1].checked)
          attendance = 1
        else if(value[6].checked)
          attendance = 0

        let info = {
          id,
          attendance
        }

        let response = await fetch('/user/attendance',{ 
          method: 'POST',
          headers: {
            'content-type': 'application/json',
            'x-auth-token':token
          },
          body: JSON.stringify(info)
        
        })

        let data = await response.json()
        if(response.status===200)
        {
          console.log(data.msg)
        }
      }

      let feedbacks = document.querySelectorAll('.feedback')

      feedbacks.forEach( feedback => {
        feedback.addEventListener('submit',submitFeedback)
      })

      async function submitFeedback(e){
        e.preventDefault()

        let id = e.target.parentNode.id
        let env = e.target.childNodes[1].value
        let speaker = e.target.childNodes[6].value
        let understanding = e.target.childNodes[11].value
        let suggestion = e.target.childNodes[16].value

        let info = {
          id,
          env,
          speaker,
          understanding,
          suggestion
        }

        console.log("info:", info)

        let response = await fetch('/user/feedback',{ 
          method: 'POST',
          headers: {
            'content-type': 'application/json',
            'x-auth-token':token
          },
          body: JSON.stringify(info)
        })

        let data = await response.json()
        if(response.status===200)
        {
          console.log(data)
        }
      }
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>